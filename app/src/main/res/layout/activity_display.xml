<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display">


        <TextView
            android:id="@+id/txtCodeTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Course Code: "/>


        <TextView
            android:id="@+id/txtCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@id/txtCodeTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNameTitle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCode"
            android:text="Course:"/>


        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:padding="10dp"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/txtCredit"
            app:layout_constraintLeft_toRightOf="@id/txtNameTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtCode" />

        <TextView
            android:id="@+id/txtCreditTitle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:padding="10dp"
            android:text="Credits:"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <TextView
            android:id="@+id/txtCredit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            app:layout_constraintLeft_toRightOf="@+id/txtCreditTitle"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/txtPrereqTitle"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            app:layout_constraintLeft_toRightOf="@id/txtCredit"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="Prerequisite:"/>

        <TextView
            android:id="@+id/txtPrereq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:padding="10dp"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtName"
            app:layout_constraintLeft_toRightOf="@id/txtPrereqTitle"
           />

        <TextView
            android:id="@+id/txtDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/txtPrereq"
            app:layout_constraintLeft_toRightOf="@id/txtPrereq"
            android:layout_margin="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>